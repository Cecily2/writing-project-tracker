<div class="box">
    <%= render partial: "progress_updates/progress_update_content", locals: {progress_update: @update} %>
    <br>
    <div class="footer">
        <br>
        <ul class="list-unstyled"><%= render @update.comments %></ul>
        
        <% if can? :create, Comment %>
          <h3>Add New Comment</h3>
            <%= form_for [@update.project, @update, @comment] do |f| %>
              <%= f.text_area :content, class: "form-control" %><br>
              <%= f.submit "Add Comment", class: "btn btn-primary" %>
            <% end %>
            <br><br>  
        <% end %>
        
        <%= link_to "Edit Update", [:edit, @update.project, @update], class: "btn btn-sm btn-primary"  if can? :update, @update %>
        <%= link_to 'Delete Update', [@update.project, @update], method: :delete, class: "btn btn-sm btn-danger" if can? :destroy, @update %>
    </div>
</div>