<h2>Projects</h2>


<div>
  <h3>Filter projects:</h3>
  <%= form_tag("/projects", method: "get") do %>
    <%= select_tag "genre", options_from_collection_for_select(@genres, "id", "name", params[:genre]), include_blank: true, class: "custom-select" %>
    <%= select_tag "sort", options_for_select([['Newest First', 'newest'], ['Most Words', 'words'], ['Highest Word Goal', 'word_goal'], ['Most Hours', 'hours']], params[:sort]), include_blank: true, class: "custom-select" %>
    <%= submit_tag "Filter", class: "btn btn-primary" %>
  <% end %>
</div>


<div class="row">
  <%= render partial: "project", collection: @projects, locals: {show_user: true} %>
</div>  